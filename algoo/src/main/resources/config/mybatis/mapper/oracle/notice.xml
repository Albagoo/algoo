<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="config.mybatis.mapper.oracle.notice">
	<!-- 09-02 searching -->
	<sql id="searchWhere">
		<where>
			<if test="searchKeyword!=null and searchKeyword!=''">
				${searchCondition}
				like '%' || #{searchKeyword} || '%'
			</if>
		</where>
	</sql>
	
	<sql id="categoryName">
		<where>
			<if test="category!=null and category!=''">
				category= #{category}
			</if>
		</where>
	</sql>
	
	<insert id="insertNotice" parameterType="NoticeVO">
		<selectKey keyProperty="mainNo" resultType="int"
		 order="BEFORE">
			select main_board_seq.nextval from dual
		</selectKey>
			insert into main_board(
				main_no, category, title, content, writer, regdate, userid)
			values(#{mainNo}, #{category}, #{title}, #{content},
			#{writer}, sysdate, '관리자')
	</insert>
	
